<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flBottomLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/black"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#182128" />

    <org.videolan.vlc.gui.audio.NavigationTabStrip
        android:id="@+id/nts_center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        app:nts_active_color="@color/red"
        app:nts_color="@color/white"
        app:nts_corners_radius="3.5dp"
        app:nts_size="16sp"
        app:nts_gravity="bottom"
        app:nts_inactive_color="@color/grey600"
        app:nts_titles="@array/bottom_navigation_options"
        app:nts_type="point"
        app:nts_typeface="fonts/moon.otf"
        app:nts_weight="5dp" />
</FrameLayout>
